<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Выдача курса</title>
    <!-- Подключение Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Выдача курса</h1>
        
        <form action="/assign-course" method="POST">
            <!-- Имя пользователя -->
            <div class="mb-3">
                <label for="username" class="form-label">Имя пользователя:</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>

            <!-- Выбор курса -->
            <div class="mb-3">
                <label for="course" class="form-label">Выберите курс:</label>
                <select id="course" name="course" class="form-select" required>
                    <option value="Основы HTML">Основы HTML</option>
                    <option value="Основы Git">Основы Git</option>
                    <option value="Основы программирования">Основы программирования</option>
                    <option value="Основы работы с компьютером">Основы работы с компьютером</option>
                    <option value="Junior Python Developer">Junior Python Developer</option>
                    <option value="Junior Frontend Developer">Junior Frontend Developer</option>
                    <option value="Middle Frontend Developer">Middle Frontend Developer</option>
                    <option value="Накрутка опыта работы">Накрутка опыта работы</option>
                </select>
            </div>

            <!-- Цена курса -->
            <div class="mb-3">
                <label for="price" class="form-label">Цена курса:</label>
                <input type="text" class="form-control" id="price" name="price" required>
            </div>

            <!-- Описание курса -->
            <div class="mb-3">
                <label for="description" class="form-label">Описание курса:</label>
                <textarea class="form-control" id="description" rows="3" readonly></textarea>
            </div>

            <!-- Прогресс -->
            <div class="mb-3">
                <label for="progress" class="form-label">Прогресс:</label>
                <input type="number" class="form-control" id="progress" name="progress" value="0" min="0" max="100" step="1" readonly>
            </div>

            <!-- Кнопка отправки -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Выдать курс</button>
            </div>
        </form>
    </div>

    <!-- Подключение Bootstrap JS и зависимостей -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Справочник с описанием курса и ценами
        const courseDescriptions = {
            "Основы HTML": ["Этот курс познакомит вас с основами веб-разработки, включая работу с HTML.", "Бесплатно"],
            "Основы Git": ["Курс по основам системы контроля версий Git.", "2099"],
            "Основы программирования": ["Курс по основам программирования.", "Бесплатно"],
            "Основы работы с компьютером": ["Этот курс поможет вам освоить базовые навыки работы с ПК.", "1490"],
            "Junior Python Developer": ["Курс для начинающих разработчиков на Python.", ""],
            "Junior Frontend Developer": ["Основы фронтенд-разработки для начинающих.", ""],
            "Middle Frontend Developer": ["Курс для разработчиков с опытом, углубление знаний в фронтенд-технологиях.", ""],
            "Накрутка опыта работы": ["Курс по развитию карьерных навыков и достижений.", "1990"]
        };

        // Событие на изменение выбора курса
        document.getElementById('course').addEventListener('change', function() {
            const courseName = this.value;
            // Устанавливаем описание и цену
            const [description, price] = courseDescriptions[courseName];
            document.getElementById('description').value = description || "";
            document.getElementById('price').value = price || "Цена не указана";
            document.getElementById('progress').value = 0;
        });

        // Инициализация с первого выбранного курса
        window.onload = function() {
            const courseName = document.getElementById('course').value;
            const [description, price] = courseDescriptions[courseName];
            document.getElementById('description').value = description || "";
            document.getElementById('price').value = price || "Цена не указана";
        };
    </script>
</body>
</html>
